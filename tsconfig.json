{
  "compilerOptions": {
    "target": "ES2018",     // The version of ECMAScript/JavaScript to compile to
    "module": "CommonJS",   // The module system used by Node.js
    "outDir": "./lib",     // The directory where transpiled JavaScript files will be placed
    "rootDir": "./src",     // The source code directory
    "strict": true,         // Enable strict type-checking
    "esModuleInterop": true, // Simplifies interoperability between CommonJS and ES modules
    "types": ["node", "jest"],      // Provide TypeScript types for Node.js core modules
    "declaration": true,    // Generates .d.ts declaration files
    "sourceMap": true       // Generate source maps for easier debugging
  },
  "include": ["src/**/*.ts"], // Files to include in the compilation
  "exclude": ["node_modules"] // Directories to exclude from compilation
}
